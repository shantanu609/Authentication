<%- include('header') -%> 
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
      <% listItems.forEach(function(result){ %>
        
        <form action="/delete" method="POST">
      
          <div class="item">
            <input type="checkbox" name = "checkbox" value = "<%= result._id%>" onChange="this.form.submit()"/>
            <p><%= result.name %></p>
          </div>
          <input type="hidden" name="listName" value="<%= listTitle%>">
      </form>

   <% }); %>
    
        <form class = "item" action="/" method="post">
          <input
              type="text"
              name="input"
              placeholder="Enter Next To-Do Item"
              autofocus
              autocomplete="off"
          />
          <button type="submit" name="submit" value = "<%= listTitle%>">+</button>
          
        </form>
    </div>

    <%- include('footer') -%> 